<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- Tracking Number -->
    <TextView
        android:id="@+id/textViewTrackingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking Number: ABC123456789"
        android:textSize="14sp"
        android:textColor="#1976D2"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <!-- Order ID -->
    <TextView
        android:id="@+id/textViewOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: 12345"
        android:textSize="14sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <!-- Recipient Name -->
    <TextView
        android:id="@+id/textViewRecipientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipient: John Doe"
        android:textSize="14sp"
        android:textColor="#555555"
        android:paddingBottom="4dp" />

    <!-- Status and Price Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <!-- Status TextView -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: Delivered"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold" />

        <!-- Price TextView -->
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 500"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Distance and Date Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <!-- Distance TextView -->
        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance: 5 km"
            android:textSize="14sp"
            android:textColor="#777777" />

    </LinearLayout>
</LinearLayout>
